@{
    ViewData["Title"] = "DashBoard";
}

<div class="search-header">
    <h2 class="dashboard-title">Dashboard</h2>
    <div class="search-container">
        <div class="form">
            <i class="fa fa-search"></i>
            <input type="text" class="form-control form-input" placeholder="Search Book">
        </div>
    </div>
</div>

<div class="dashboard-body">
    <div class="dashboard-content">
        <div class="dashboard-text">
            <h3>Upload Your Books, Create <br> Your Library</h3>
            <button class="add-button">
                Add New Book <i class="fa fa-plus"></i>
            </button>
        </div>
        <div class="dashboard-image">
            <img src="~/img/dashboard-girl.png" alt="Dashboard Girl">
        </div>
    </div>
</div>

<div class="new-book-body">
    <h2 class="new-book-title">New Book</h2>
    <a href="#" class="see-more-link">See More</a>
    <div class="book-containers">
        @for (int i = 1; i <= 5; i++)
        {
            <div class="book-container" id="book@i">
                <img src="~/img/book-test.png" alt="Book @i">
                <div class="new-book-info">
                    <h4>Title of Book @i</h4>
                    <p>Author @i</p>
                    <div class="star-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="book-list-body">
    <h2 class="book-list-title">Book List</h2>
    <a href="#" class="view-all-link">View All</a>
    <div class="book-list-container">
        <div class="book-list">
            @for (int i = 1; i <= 3; i++)
            {
                <div class="book-item">
                    <img src="~/img/book-test.png" alt="Book @i">
                    <div class="book-details">
                        <div class="book-info">
                            <h4>Title of Book @i</h4>
                            <p>Author @i</p>
                            <div class="reviews-ratings">
                                <span class="reviews">Reviews: 15 <i class="fas fa-comment"></i></span>
                                <span class="ratings">Ratings: 499</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="popular-books-body">
    <h2 class="popular-books-title">Popular Books</h2>
    <div class="popular-books-containers">
        @for (int i = 1; i <= 5; i++)
        {
            <div class="popular-books-container" id="book@i">
                <div class="place-badge">@i</div>
                <img src="~/img/book-test.png" alt="Book @i">
                <div class="popular-books-info">
                    <h4>Title of Book @i</h4>
                    <p>Author @i</p>
                    <div class="star-rating">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                    </div>
                </div>
            </div>
        }
    </div>
    <a href="#" class="popular-see-more-link">See More</a>
</div>

<div class="popular-books-list-body">
    <div class="popular-books-list-container">
        <div class="popular-books-list">
            @for (int i = 6; i <= 8; i++)
            {
                <div class="popular-books-list-item">
                    <div class="popular-books-list-number">@i</div>
                    <img src="~/img/book-test.png" alt="Book @i">
                    <div class="popular-books-list-details">
                        <div class="popular-books-list-info">
                            <h4>Title of Book @i</h4>
                            <p>by Author @i</p>
                            <p>Genre @i</p>
                            <div class="popular-reviews-ratings">
                                <span class="reviews">Reviews: 15 <i class="fas fa-comment"></i></span>
                                <span class="ratings">Ratings: 499</span>
                            </div>
                        </div>
                    </div>
                    <a href="#" class="go-to-book"><i class="fas fa-chevron-right"></i></a>
                </div>
            }
        </div>
    </div>
</div>



  

